                <h2>User List</h2>
                <table class="w-100">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var use in usersll)
                        {
                            <tr>
                                <td>@use.Id</td>
                                <td>@use.Name</td>
                                <td>@use.Email</td>
                                <td>@use.Role</td>


                            </tr>
                        }
                        
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="Js/echarts.min.js"></script>




