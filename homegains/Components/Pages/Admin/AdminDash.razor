                                    left: 'left'
                                },
                                series: [{
                                    name: 'Access From',
                                    type: 'pie',
                                    radius: '50%',
                                    data: [{
                                        value: 1048,
                                        name: 'views'
                                    },
                                    {
                                        value: 735,
                                        name: 'Registered Users'
                                    },
                                    {
                                        value: 580,
                                        name: 'Email'
                                    },
                                    {
                                        value: 484,
                                        name: 'BMI Calculation'
                                    },
                                    {
                                        value: 300,
                                        name: 'Do Workouts'
                                    }
                                    ],
                                    emphasis: {
                                        itemStyle: {
                                            shadowBlur: 10,
                                            shadowOffsetX: 0,
                                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                                        }
                                    }
                                }]
                            });
                        });
