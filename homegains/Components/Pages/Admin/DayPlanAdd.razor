@page "/DayPlanAdd"
@using homegains.Controllers.AdminController
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inject AddPlan AddPlan
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "AdminOnly")]
<style>
    .day-button {
        width: 80px;
        height: 80px;
        border-radius: 10px;
        background: linear-gradient(145deg, #e6ffe6, #ccffcc);
        box-shadow: 5px 5px 15px #d1ffd2, -5px -5px 15px #f8fff9;
        border: none;
        transition: all 0.3s ease-in-out;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .day-button:hover {
            background: linear-gradient(145deg, #ccffcc, #e6ffe6);
            box-shadow: 5px 5px 15px #c1e8c4, -5px -5px 15px #d8ffd9;
            transform: scale(1.1);
        }

    .day-number {
        font-size: 1.5rem;
        font-weight: bold;
        color: #007bff;
    }

    .day-text {
        font-size: 0.875rem;
        color: #6c757d;
    }

    .background {
        background-image: url('image/low-angle-view-unrecognizable-muscular-build-man-preparing-lifting-barbell-health-club.jpg'); /* Replace with your image path */
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        min-height: 100vh;
        padding: 20px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="p-3">
                <h4 class="p-0 m-0">Add DayPlan</h4>
